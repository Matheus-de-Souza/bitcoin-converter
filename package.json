{
  "name": "bitcoin-converter",
  "version": "1.0.0",
  "description": "A CLI to convert bitcoin to any other currency",
  "scripts": {
    "build:clear": "rimraf ./bin",
    "build": "npm run build:clear && \"node_modules/.bin/babel\" --out-dir bin src",
    "build:watch": "npm run build -- --watch",
    "lint": "node_modules/.bin/eslint src/**/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "cross-env NODE_ENV=test nyc node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc --all npm test",
    "start": "./node_modules/.bin/webpack-dev-server",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "preferGlobal": true,
  "bin": {
    "bitcoin-converter": "bin/main.js"
  },
  "main": "bin/main.js",
  "files": [
    "bin/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matheus-de-Souza/bitcoin-converter.git"
  },
  "keywords": [
    "bitcoin",
    "converter",
    "cli",
    "tdd",
    "tests",
    "js"
  ],
  "author": "Matheus de Souza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matheus-de-Souza/bitcoin-converter/issues"
  },
  "homepage": "https://github.com/Matheus-de-Souza/bitcoin-converter#readme",
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "coverage/**"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jsdom": "^11.7.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.6",
    "sinon-chai": "^3.0.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "commander": "^2.15.1"
  }
}
